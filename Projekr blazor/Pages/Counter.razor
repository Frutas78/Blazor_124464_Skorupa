@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Dodaj</button>
<button class="btn btn-primary" @onclick="DecreaseCount">Zmniejsz</button>
@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecreaseCount()
    {
        currentCount--;
    }
}
